@using SliceCloud.Repository.Models
@using SliceCloud.Repository.ViewModels
@{
    ViewData[index: "Title"] = "Users";
}
@model PaginatedList<User>
@section Styles {
    <link rel="stylesheet" href="~/css/users-table.css" />
}
<div class="d-flex flex-column w-100 p-4">
    <div class="d-flex justify-content-between w-100 mb-3 d-sm-row d-column flex-wrap flex-sm-nowrap">
        <h1 class="custom-body-text-color">Users</h1>
        <div class="d-flex align-items-center gap-2 d-sm-row d-column flex-wrap flex-sm-nowrap gap-3">
            <div class="d-flex align-items-center border rounded px-2 bg-white search-box">
                <input class="form-control border-0 shadow-none p-0 search-input" type="text" placeholder="Search Users"
                    id="search" name="search" aria-label="Search users">
            </div>
            <a asp-controller="Users" asp-action="AddNewUser" class="btn btn-primary d-flex align-items-center">
                + Add User
            </a>
        </div>
    </div>
    <div id="userTableContainer">
        @await Html.PartialAsync(partialViewName: "_UserTablePartialView", Model)
    </div>
</div>
<div class="modal fade" id="delete-user-modal" tabindex="-1" aria-labelledby="delete-user-modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-user-modal">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column align-items-center justify-content-center gap-2">
                <div>
                    <i class="bi bi-exclamation-triangle fs-1"></i>
                </div>
                <div>Are you sure you want to delete this user?</div>
            </div>
            <div class="modal-footer d-flex align-items-center justify-content-center">
                <form id="deleteForm" method="post" asp-controller="Users" asp-action="DeleteUser">
                    <input type="hidden" name="deleteUserId" id="deleteUserId" value="" />
                    <button type="submit" class="btn btn-primary text-white">YES</button>
                </form>
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">NO</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/users-table.js"></script>
}